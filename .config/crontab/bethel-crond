#@monthly     root zfsnap.sh snapshot -rsSvz -p monthly- -a forever pool rpool tank

# ZFS sync snapshots
0  * * * *   root simplesnap --host ariel-wl --setname bethel --store external/backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap"
#15 * * * *   root simplesnap --host bethel   --setname bethel --store external/backups --local
25 * * * *   root simplesnap --host gabriel  --setname bethel --store external/backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap"
40 * * * *   root simplesnap --host gabriel  --setname bethel --store external/backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap" --backupdataset rpool/var/lib/docker
50 * * * *   root simplesnap --host proxmox  --setname bethel --store external/backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap"

## ZFS cleanup snapshots
#@daily       root zfsnap.sh destroy -rsSv -F 2d -p 15min-             pool rpool tank
#@daily       root zfsnap.sh destroy -rsSv -F 2w -p daily-             pool rpool tank
#@daily       root zfsnap.sh destroy -rsSv -F 2m -p weekly- -p reboot- pool rpool tank
#@daily       root zfsnap.sh destroy -rsSv -F 6m -p monthly-           pool rpool tank

@daily       root zfsnap.sh destroy -rsSv       -p 15min- -p daily- -p weekly- -p reboot- external/backups

# ZFS check
@daily       root simplesnap --host ariel-wl --setname bethel --store external/backups --check "1 day ago"
#@daily       root simplesnap --host bethel   --setname bethel --store external/backups --check "1 day ago"
@daily       root simplesnap --host gabriel  --setname bethel --store external/backups --check "1 day ago"
@daily       root simplesnap --host proxmox  --setname bethel --store external/backups --check "1 day ago"

