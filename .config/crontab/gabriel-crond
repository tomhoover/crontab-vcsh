# ZFS sync snapshots
@hourly      root simplesnap --host gabriel  --setname gabriel --store backups --local
@hourly      root simplesnap --host gabriel  --setname gabriel --store backups --local --backupdataset rpool/var/lib/docker
@hourly      root simplesnap --host ariel-wl --setname gabriel --store backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap"
@hourly      root simplesnap --host bethel   --setname gabriel --store backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap"
@hourly      root simplesnap --host proxmox  --setname gabriel --store backups --sshcmd "ssh -i /root/.ssh/id_rsa_simplesnap"

# ZFS cleanup snapshots
@daily       root zfsnap.sh destroy -rsSv -F 2d -p 15min-             rpool tank
@daily       root zfsnap.sh destroy -rsSv -F 2w -p daily-             rpool tank
@daily       root zfsnap.sh destroy -rsSv -F 2m -p weekly- -p reboot- rpool tank
@daily       root zfsnap.sh destroy -rsSv -F 6m -p monthly-           rpool tank

@daily       root zfsnap.sh destroy -rsSv       -p 15min- -p daily- -p weekly- -p reboot- backups

# ZFS check
@daily       root simplesnap --check "7 days ago"

